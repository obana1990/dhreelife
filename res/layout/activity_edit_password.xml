<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.my.dhreelife.EditPasswordActivity" >

    <ProgressBar
        android:id="@+id/contactDetailsLoadingPb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/contactDetailsLoadingTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Submitting request.."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/gray"
        android:visibility="gone" />

    <EditText
        android:id="@+id/oldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="&lt;Current Password>"
        android:inputType="textPassword"
        android:visibility="visible" />

    <EditText
        android:id="@+id/newPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="&lt;New Password>"
        android:inputType="textPassword"
        android:visibility="visible" />

    <EditText
        android:id="@+id/newPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="&lt;Re-enter New Password>"
        android:inputType="textPassword"
        android:visibility="visible" />

    <Button
        android:id="@+id/updatePassword"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/update_button"
        android:visibility="visible" />

</LinearLayout>